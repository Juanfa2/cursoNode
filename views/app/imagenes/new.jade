extends ../../layout.jade
block contenido
    div(class="col-md-8 remove-float center-block big-top-space")
        h1 Subir nueva imagen
        form(action="/app/imagenes" , enctype="multipart/form-data", method="POST" )
            div(class="form-group")
                label(for="title") Titulo
                input(type="text"  name="title" placeholder="Titulo de la imagen..."  id="title"  class="form-control")
            div(class="form-group")
                label(for="archivo") Imagen
                input(type="file"  name="archivo"  id="archivo" class="form-control")
            div(class="row")    
                div(class="form-group col-xs-12 col-sm-6")
                    input(type="submit", value="Subir Imagen" class="btn btn-info")    
           
