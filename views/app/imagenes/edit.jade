extends ../../layout.jade
block contenido
    div(class="col-md-8 remove-float center-block big-top-space")
        h1 Editar imagen
        form(action="/app/imagenes/#{imagen.id}?_method=PUT", method="POST")
            div(class="form-group")
                label(for="title") Titulo
                input(type="text"  name="title" value="#{imagen.title}"  id="title"  class="form-control")
            div(class="row")    
                div(class="form-group col-xs-12 col-sm-6")
                    input(type="submit", value="Guardar" class="btn btn-info")    
           
